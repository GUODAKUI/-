<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部框 -->
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/backgroud" >
        
         
           <TextView
            android:id="@+id/cart_title"
           android:textColor="#FFFFFF"
           android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的HiTao" />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/back" />
      </RelativeLayout>
      
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="70dp"
		  android:layout_marginTop="0dp"
          android:background="@drawable/backgroud"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView1"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:src="@drawable/head"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="15dp"
               />
          <LinearLayout
              android:id="@+id/personinforbtn"
          android:layout_width="match_parent"
          android:layout_height="50dp"
		  android:orientation="vertical"
		  android:layout_marginLeft="20dp"
		  android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/myname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="某某某"/>

               <TextView
                  android:id="@+id/hello"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:text="您好！"/>
              
                 
          </LinearLayout>
         </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
      </LinearLayout>
      
      
             
             <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:orientation="horizontal"  >

                 
                  <LinearLayout
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:orientation="vertical"  >
              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/peg" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:text="待付款"/>
           </LinearLayout>    
           
                  
                   <LinearLayout
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:orientation="vertical"  >
              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/map" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:text="待发货"/>
           </LinearLayout>    
           
                   
                    <LinearLayout
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:orientation="vertical"  >
              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/key" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:text="待收货"/>
           </LinearLayout>    
           
                    
                    
                     <LinearLayout
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:orientation="vertical"  >
              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/coffee" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:text="待评论"/>
           </LinearLayout>    
          
          
          
          </LinearLayout>   
          
          
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
           </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical"  >
          
          
          <LinearLayout
              android:id="@+id/favoritybtn"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"  >

              <ImageView
                  android:id="@+id/imageView2"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/collet" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:text="收藏夹"/>
              
          </LinearLayout>   
          
          
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
           </LinearLayout>
           
          
           <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"  >

              <ImageView
                 
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/shopcar" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:text="购物车"/>
              
          </LinearLayout>   
          
          
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
           </LinearLayout>
           
          
          
           <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"  >

              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/me" />
              
              
               <TextView
                  android:id="@+id/hello"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:text="我的店铺"/>
              
          </LinearLayout>   
          
          
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
           </LinearLayout>
           
           <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"  >

              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/money" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:text="余额管理"/>
              
          </LinearLayout>   
          
          
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
           </LinearLayout>
           
   
                  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"  >

              <ImageView
                  
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/people" />
              
              
               <TextView
                  
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:text="我的好友"/>
              
          </LinearLayout>   
          
          
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:orientation="vertical" 
          android:background="@drawable/divide">
           </LinearLayout>
           
      
         
           
      
      </LinearLayout>
      
       <include
         layout="@layout/dibian" />
   
</LinearLayout>